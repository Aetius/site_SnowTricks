{% extends "base.html.twig" %}
{% block body %}

    {# {% import "macro/form.html.twig" as form %}#}

    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="trick-image">
            {#<img src="{{ asset('images/background_image.jpg') }}" alt="background image" width="100%" height="100%" >
            <h1>{{ trick.title }}</h1>#}

        </div>
        <div class="mt-5 d-flex row">

        </div>
        <div>
            <div class="m-5 p-3 text-justify">


            </div>

        </div>
        <div class="col-md-12 trickEdit">

            {{ form_start((form)) }}
            <div class="col-md-6  mb-5">
                {{ form_row(form.title) }}
            </div>

            <div class="text col-md-12">
                {{ form_row(form.description) }}
            </div>
            <div class="col-md-6  mb-5">
                {{ form_row(form.pictureFiles, { attr: {'placeholder': 'Selectionner un fichier'}}) }}
            </div>
            <div >
                {{ form_row(form.trickGroup) }}
            </div>
            <div>
                {{ form_row(form.trickGroupAdd) }}
            </div>

            <div hidden>
                {{ form_rest(form) }}
            </div>
            <div class=" d-flex flex-row-reverse mt-4">
                <button class="btn btn-primary mx-3">Sauvegarder</button>
                {{ form_end(form) }}

            </div>
        </div>

    </div>


{% endblock %}