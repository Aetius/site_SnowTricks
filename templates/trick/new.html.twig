{% extends "base.html.twig" %}
{% block body %}

    <div class="container mt-5">
        {% include '_message_flash.html.twig' %}
        <div class="trick-image">
        </div>
        <div class="mt-5 d-flex row">
        </div>

        <div class="col-md-12 trickEdit">
            {{ form_start((form)) }}
            <div class="col-md-6  mb-5">
                {{ form_row(form.title) }}
            </div>
            <div class="text col-md-12">
                {{ form_row(form.description) }}
            </div>
            <div class="col-md-6  mb-5">
                {{ form_row(form.pictureFiles ) }}
            </div>
            <div>
                {% include ("/video/_addVideos.html.twig") %}
            </div>
            <div>
                {{ form_row(form.trickGroup) }}
            </div>
            <div hidden>
                {{ form_rest(form) }}
            </div>
            <div class=" d-flex flex-row-reverse mt-4">
                <button class="btn btn-primary mx-3">Sauvegarder</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}