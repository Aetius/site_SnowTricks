{% extends "./base.html.twig" %}

    {% block title 'Se connecter' %}
    {% block body %}
        <div class="d-none d-md-block">
            <div class="d-flex justify-content-center mt-5 pt-3 ">
                <h1>Login</h1>
            </div>
        </div>

    <div class="container d-flex justify-content-center mt-5 pb-4  text-center">

        <div class="border px-5 py-5">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey | trans(error.messageData, 'security') }}
            </div>
        {% endif %}
            <div class="d-md-none pb-5">
                <h1>Login</h1>
            </div>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
            </div>
            <div class="form-group pb-4">
                <label for="password">Mot de passe</label>
                <input type="text" id="password" name="_password" class="form-control">
            </div>
            <div class="d-none d-md-block mb-4 py-3">
                <a href="/inscription" class="pr-4">Pas encore inscrit ? </a>
                <a href="">Mot de passe oublié ? </a>

            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
            <div class="d-md-none">
                <div class="d-flex flex-column mt-5">
                    <a href="" class="mb-4">Pas encore inscrit ? </a>
                    <a href="">Mot de passe oublié ? </a>

                </div>
            </div>
    </div>

</div>



{% endblock %}