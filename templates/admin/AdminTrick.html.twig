{% extends "base.html.twig" %}
{% block body %}

    <div class="container mt-5">
        {% include '_message_flash.html.twig' %}

        <div class="mt-5 d-flex row">
        </div>
        <div>
            <div class="m-5 p-3 text-justify">
            </div>
        </div>
        <div class="text-center mb-5">
            <div class="h1">
                Gestion des utilisateurs.
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                {{ form_start((form)) }}
                <div class="row">
                    <div class="d-flex row">
                        {% for user in users %}
                            <div class="col-md-6 d-flex justify-content-center">
                                <div class="col-md-10 m-3">
                                    {{ user.login |title }}
                                    {{ form_row(form.users[loop.index0].isActivate) }}
                                    {{ form_row(form.users[loop.index0].role) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class=" d-flex flex-row-reverse mt-4">
                    <button class="btn btn-primary mx-3">Sauvegarder</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>


    </div>


{% endblock %}